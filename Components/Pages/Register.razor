@page "/register"
@using System.ComponentModel.DataAnnotations
@inject AuthService Auth
@inject NavigationManager Nav

<h3>Register</h3>

@if (_passwordMismatch)
{
    <div class="alert alert-danger">
        The passwords don't match.
    </div>
}

@if (!string.IsNullOrEmpty(_error))
{
    <div class="alert alert-danger">@_error</div>
}

@if (!string.IsNullOrEmpty(_successMessage))
{
    <div class="alert alert-success">@_successMessage</div>
}

<EditForm Model="Model"
          OnValidSubmit="HandleValidSubmit"
          FormName="RegisterForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control"
                   @bind-Value="Model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Display name</label>
        <InputText class="form-control"
                   @bind-Value="Model.DisplayName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control"
                   type="password"
                   @bind-Value="Model.Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm password</label>
        <InputText class="form-control"
                   type="password"
                   @bind-Value="Model.ConfirmPassword" />
    </div>

    <button type="submit" class="btn btn-primary me-2">Register</button>
    <NavLink href="/login" class="btn btn-link">Back to login</NavLink>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private RegisterModel Model { get; set; } = new();
    
    private bool _passwordMismatch;
    private string? _error;
    private string? _successMessage;

    private async Task HandleValidSubmit()
    {
        _error = null;
        _successMessage = null;
        _passwordMismatch = false;
        
        if (Model.Password != Model.ConfirmPassword)
        {
            _passwordMismatch = true;
            return;
        }

        try
        {
            var result = await Auth.RegisterAsync(Model.Email, Model.Password, Model.DisplayName);
            if (result.Success)
            {
                _successMessage = "Registration successful!";
                StateHasChanged();
                await Task.Delay(1500); 
                Nav.NavigateTo("/login", forceLoad: true);
            }
            else
            {
                _error = result.ErrorMessage ?? "Registration failed. Please try again.";
            }
        }
        catch (Microsoft.AspNetCore.Components.NavigationException)
        {
    
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private sealed class RegisterModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required, MaxLength(100)]
        public string DisplayName { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;

        [Required]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}