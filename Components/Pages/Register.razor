@page "/register"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@using QuizLeaderboard.Services
@inject AuthService Auth
@inject NavigationManager Nav

<h3>Register</h3>

<EditForm Model="@_model"
          OnValidSubmit="@OnSubmit"
          FormName="registerForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control" @bind-Value="_model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Display name</label>
        <InputText class="form-control" @bind-Value="_model.DisplayName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm password</label>
        <InputText class="form-control" type="password" @bind-Value="_model.ConfirmPassword" />
    </div>

    <button type="submit" class="btn btn-primary me-2">Register</button>
    <a href="/login" class="btn btn-link">Back to login</a>
</EditForm>

@code {
    private RegisterModel _model { get; set; } = new();

    private async Task OnSubmit()
    {
        if (_model.Password != _model.ConfirmPassword)
        {
            // minimál ellenőrzés – itt lehetne ValidationMessage-t is használni
            return;
        }

        await Auth.RegisterAsync(_model.Email, _model.Password, _model.DisplayName);

        Nav.NavigateTo("/dashboard", forceLoad: true);
    }

    public class RegisterModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string DisplayName { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;

        [Required]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
