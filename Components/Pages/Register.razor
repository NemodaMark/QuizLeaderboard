@page "/register"
@rendermode InteractiveServer

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@inject AuthService Auth
@inject NavigationManager Nav

<h3>Register</h3>

@if (_passwordMismatch)
{
    <div class="alert alert-danger">
        The passwords don't match.
    </div>
}

<EditForm Model="_model"
          OnValidSubmit="HandleValidSubmit"
          FormName="RegisterForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText class="form-control"
                   @bind-Value="_model.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Display name</label>
        <InputText class="form-control"
                   @bind-Value="_model.DisplayName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText class="form-control"
                   type="password"
                   @bind-Value="_model.Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm password</label>
        <InputText class="form-control"
                   type="password"
                   @bind-Value="_model.ConfirmPassword" />
    </div>

    <button type="submit" class="btn btn-primary me-2">Register</button>
    <NavLink href="/login" class="btn btn-link">Back to login</NavLink>
</EditForm>

@code {
    private readonly RegisterModel _model = new();
    private bool _passwordMismatch;
    private string? _error; // Added error handling display for API response

    private async Task HandleValidSubmit()
    {
        _error = null;
        if (_model.Password != _model.ConfirmPassword)
        {
            _passwordMismatch = true;
            return;
        }

        _passwordMismatch = false;

        try
        {
            await Auth.RegisterAsync(_model.Email, _model.Password, _model.DisplayName);
            // after successful registration go straight to dashboard
            Nav.NavigateTo("/dashboard", forceLoad: true);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }

    private sealed class RegisterModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required, MaxLength(100)]
        public string DisplayName { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;

        [Required]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}