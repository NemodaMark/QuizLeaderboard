@page "/leaderboard"
@using QuizLeaderboard.Services
@using QuizLeaderboard.Models
@using Microsoft.AspNetCore.SignalR.Client
@inject LeaderboardService LeaderboardService
@inject UserSession Session
@inject NavigationManager Navigation
@implements IAsyncDisposable

<div class="container my-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
        <div>
            <h3 class="mb-1">Leaderboard</h3>
            @if (Session.IsLoggedIn)
            {
                <small class="text-muted">
                    Logged in as <strong>@Session.CurrentUser!.DisplayName</strong>
                </small>
            }
            else
            {
                <small class="text-muted">
                    <a href="/login">Log in</a> to start playing and appear on the leaderboard.
                </small>
            }
        </div>

        <div class="btn-group" role="group" aria-label="Leaderboard period">
            <button class="btn @( _selectedPeriod == LeaderboardPeriod.Daily ? "btn-primary" : "btn-outline-secondary")"
                    @onclick="() => ChangePeriod(LeaderboardPeriod.Daily)">
                Daily
            </button>
            <button class="btn @( _selectedPeriod == LeaderboardPeriod.Weekly ? "btn-primary" : "btn-outline-secondary")"
                    @onclick="() => ChangePeriod(LeaderboardPeriod.Weekly)">
                Weekly
            </button>
            <button class="btn @( _selectedPeriod == LeaderboardPeriod.Monthly ? "btn-primary" : "btn-outline-secondary")"
                    @onclick="() => ChangePeriod(LeaderboardPeriod.Monthly)">
                Monthly
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (_entries is null)
            {
                <div class="p-3">
                    <p class="mb-0 text-muted">Loading leaderboard…</p>
                </div>
            }
            else if (!_entries.Any())
            {
                <div class="p-3">
                    <p class="mb-0 text-muted">No results yet.</p>
                </div>
            }
            else
            {
                <table class="table mb-0">
                    <thead class="table-light">
                    <tr>
                        <th style="width:80px;">#</th>
                        <th>User</th>
                        <th class="text-end" style="width:120px;">Score</th>
                        <th class="text-end" style="width:150px;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var e in _entries)
                    {
                        <tr @onclick="() => GoToProfile(e.UserId)" style="cursor:pointer;">
                            <td>
                                @if (e.Rank == 1)
                                {
                                    <span class="badge bg-warning text-dark">#1</span>
                                }
                                else if (e.Rank == 2)
                                {
                                    <span class="badge bg-secondary">#2</span>
                                }
                                else if (e.Rank == 3)
                                {
                                    <span class="badge" style="background-color:#cd7f32;">#3</span>
                                }
                                else
                                {
                                    <span>#@e.Rank</span>
                                }
                            </td>
                            <td><strong>@e.DisplayName</strong></td>
                            <td class="text-end"><strong>@e.TotalScore</strong></td>
                            <td class="text-end">
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        @onclick="(MouseEventArgs _) => GoToProfile(e.UserId)">
                                    Profile
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5>Add score (demo)</h5>
            @if (!Session.IsLoggedIn)
            {
                <p class="mb-0">
                    You must <a href="/login">log in</a> before submitting a score.
                </p>
            }
            else
            {
                <div class="row g-2 align-items-end">
                    <div class="col-sm-4">
                        <input type="number" class="form-control" @bind="_newScore" min="0" />
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-primary" @onclick="SubmitScore">Send score</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private LeaderboardPeriod _selectedPeriod = LeaderboardPeriod.Daily;
    private List<LeaderboardEntry>? _entries;
    private int _newScore;
    private HubConnection? _hubConnection;

    protected override async Task OnInitializedAsync()
    {
        _hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/hubs/leaderboard"))
            .WithAutomaticReconnect()
            .Build();

        _hubConnection.On<List<LeaderboardEntry>>("LeaderboardUpdated", data =>
        {
            _entries = data;
            InvokeAsync(StateHasChanged);
        });

        await _hubConnection.StartAsync();
        await LoadLeaderboard();
    }

    private async Task ChangePeriod(LeaderboardPeriod period)
    {
        if (_selectedPeriod == period)
            return;

        _selectedPeriod = period;
        await LoadLeaderboard();
    }

    private async Task LoadLeaderboard()
    {
        _entries = await LeaderboardService.GetLeaderboardAsync(_selectedPeriod);
    }

    private async Task SubmitScore()
    {
        if (!Session.IsLoggedIn || _hubConnection is null)
            return;

        var userName = Session.CurrentUser!.DisplayName;
        await _hubConnection.SendAsync("SubmitScore", userName, _newScore, _selectedPeriod);
        _newScore = 0;
    }

    private void GoToProfile(Guid userId)
    {
        Navigation.NavigateTo($"/profile/{userId}");
    }

    public async ValueTask DisposeAsync()
    {
        if (_hubConnection is not null)
        {
            await _hubConnection.DisposeAsync();
        }
    }
}
